{
  "name": "image-exporter",
  "version": "0.0.1",
  "description": "Plotly's image exporting utility",
  "license": "MIT",
  "main": "./bin/plotly-graph-exporter_electron.js",
  "bin": {
    "plotly-graph-exporter": "./bin/plotly-graph-exporter.js",
    "plotly-export-server": "./bin/plotly-export-server.js"
  },
  "scripts": {
    "pretest": "node test/pretest.js",
    "test:lint": "standard | snazzy",
    "test:unit": "tap test/unit/*_test.js",
    "test:integration": "tap test/integration/*_test.js",
    "test": "npm run test:lint && npm run test:unit && npm run test:integration",
    "coverage": "npm run test:unit -- --cov",
    "lint": "standard --fix",
    "pack": "cross-env NODE_ENV=production electron-builder --publish=never"
  },
  "build": {
    "appId": "com.plotly.image-exporter.graph-exporter",
    "productName": "Plotly Graph Exporter",
    "files": [
      "bin",
      "src"
    ],
    "asar": false,
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "linux": {
      "category": "Utility",
      "executableName": "plotly-graph-exporter",
      "maintainer": "chris@plot.ly",
      "target": [
        "appimage"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.tools",
      "target": [
        "dmg"
      ]
    },
    "directories": {
      "output": "release"
    }
  },
  "author": "Plotly, Inc.",
  "keywords": [
    "graphing",
    "plotting",
    "visualization",
    "plotly"
  ],
  "dependencies": {
    "body": "^5.1.0",
    "fast-isnumeric": "^1.1.1",
    "file-type": "^7.2.0",
    "get-stdin": "^5.0.1",
    "glob": "^7.1.2",
    "is-plain-obj": "^1.1.0",
    "is-url": "^1.2.4",
    "minimist": "^1.2.0",
    "read-chunk": "^2.1.0",
    "request": "^2.81.0",
    "run-parallel": "^1.1.6",
    "run-parallel-limit": "^1.0.3",
    "run-series": "^1.1.4",
    "semver": "^5.4.1",
    "string-to-stream": "^1.1.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "devtron": "^1.4.0",
    "electron": "^1.7.9",
    "electron-builder": "^20.2.0",
    "electron-debug": "^1.4.0",
    "image-size": "^0.6.1",
    "sinon": "^3.2.0",
    "snazzy": "^7.0.0",
    "spectron": "^3.7.2",
    "standard": "^10.0.3",
    "tap": "^10.7.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "nyc": {
    "exclude": [
      "build",
      "test"
    ]
  }
}
