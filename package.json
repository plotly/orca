{
  "name": "image-exporter",
  "version": "0.0.1",
  "description": "Plotly's image exporting utility",
  "license": "MIT",
  "main": "./bin/plotly-graph-exporter_electron.js",
  "bin": {
    "plotly-graph-exporter": "./bin/plotly-graph-exporter.js",
    "plotly-export-server": "./bin/plotly-export-server.js"
  },
  "scripts": {
    "pretest": "node test/pretest.js",
    "test:lint": "standard | snazzy",
    "test:unit": "tap test/unit/*_test.js",
    "test:integration": "tap test/integration/*_test.js",
    "test": "yarn run test:lint && yarn run test:unit && yarn run test:integration",
    "coverage": "yarn run test:unit -- --cov",
    "lint": "standard --fix",
    "pack": "cross-env NODE_ENV=production electron-builder --publish=never"
  },
  "build": {
    "appId": "com.plotly.image-exporter.graph-exporter",
    "electronCompile": false,
    "productName": "Plotly Graph Exporter",
    "copyright": "Copyright Â© 2018 ${author}",
    "appImage": {
      "systemIntegration": "doNotAsk",
      "category": "Utility"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "default"
        }
      ]
    }
  },
  "author": "Plotly, Inc.",
  "keywords": [
    "graphing",
    "plotting",
    "visualization",
    "plotly"
  ],
  "dependencies": {
    "body": "^5.1.0",
    "cross-env": "^5.1.3",
    "fast-isnumeric": "^1.1.1",
    "file-type": "^7.2.0",
    "get-stdin": "^5.0.1",
    "glob": "^7.1.2",
    "is-plain-obj": "^1.1.0",
    "is-url": "^1.2.2",
    "minimist": "^1.2.0",
    "read-chunk": "^2.1.0",
    "request": "^2.81.0",
    "run-parallel": "^1.1.6",
    "run-parallel-limit": "^1.0.3",
    "run-series": "^1.1.4",
    "semver": "^5.4.1",
    "string-to-stream": "^1.1.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^1.7.9",
    "electron-debug": "^1.4.0",
    "electron-builder": "^20.2.0",
    "image-size": "^0.6.1",
    "sinon": "^3.2.0",
    "snazzy": "^7.0.0",
    "spectron": "^3.7.2",
    "standard": "^10.0.3",
    "tap": "^10.7.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "nyc": {
    "exclude": [
      "build",
      "test"
    ]
  }
}
